{
  "extends": ["eslint:recommended", "eslint-config-prettier"],
  "plugins": ["eslint-plugin-prettier"],

  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    // maybe your other rules...
    "no-unused-vars": "off",
    "prettier/prettier": "warn"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}
